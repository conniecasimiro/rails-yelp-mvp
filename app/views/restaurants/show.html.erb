<h1><%= @restaurant.name %></h1>
<h3>Adress: <%= @restaurant.address %></h3>
<h3>Phone number: <%= @restaurant.phone_number %></h3>
<h3>Category: <%= @restaurant.category %></h3>

<div class="mt-3">
  <%= link_to "Delete Restaurant", restaurant_path(@restaurant), class: "btn btn-primary", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
</div>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
    <%= review.rating %> -
    <%= review.content %>
    <%= link_to "Delete",
      review_path(review),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
    </li>
  <% end %>
</ul>

<div class="mt-3">
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
</div>
<div class="mt-3">
  <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-warning btn-lg"%>
</div>
